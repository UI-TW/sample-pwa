env:
  browser: true
  es6: true

parser: "babel-eslint"

extends:
  - airbnb

rules:
  object-curly-newline: 0
  import/no-unresolved: 0
  no-underscore-dangle: 0
  no-unused-vars: 0
  comma-dangle: 0
  no-new: 0
  class-methods-use-this: 0
  consistent-return: 0
  arrow-body-style: 0
  arrow-parens: 0
  no-unused-expressions: [2, { allowTernary: true, allowShortCircuit: true }]
